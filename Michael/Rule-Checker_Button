# Load config
risk_config = load_risk_config()

# Hook into button
check_button = ttk.Button(
    outer_frame, 
    text="Check Risks", 
    width=12, 
    style="Green.TButton",
    command=lambda: display_rules(find_high_risk_rules(ruleset, risk_config))
)
check_button.grid(row=1, column=8, padx=5, pady=5)